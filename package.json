    "react": "19.0.0",
    "react-dom": "19.0.0",
    "rehype-document": "^7.0.3",
    "rehype-external-links": "^3.0.0",
    "rehype-katex": "^7.0.1",
    "rehype-pretty-code": "0.14.1",
    "remark-emoji": "^5.0.1",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@iconify-json/devicon": "^1.2.36",
    "@iconify-json/logos": "^1.2.5",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/simple-icons": "^1.2.46",
    "@iconify-json/skill-icons": "^1.2.0",
    "@iconify-json/tabler": "^1.2.20",
    "@iconify-json/token-branded": "^1.2.20",
    "@iconify-json/vscode-icons": "^1.2.24",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-astro-organize-imports": "^0.4.11",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sharp": "^0.34.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-tailwindcss",
      "prettier-plugin-astro-organize-imports"
    ],
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  }
}
