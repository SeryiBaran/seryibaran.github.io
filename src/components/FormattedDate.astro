---
import { formatPostDate } from '@/utils'
import Icon from 'astro-icon'

export interface Props {
  date: Date
}

const { date } = Astro.props
---

<time datetime={date.toISOString()} class="inline-flex items-center gap-1">
  <Icon name="tabler:calendar" class="w-1em h-1em" />
  {formatPostDate(date)}
</time>
