---
import { formatPostDate } from '@/utils'
import TablerCalendar from '~icons/tabler/calendar'

export interface Props {
  date: Date
}

const { date } = Astro.props
---

<time datetime={date.toISOString()} class="inline-flex items-center gap-1">
  <TablerCalendar class="w-1em h-1em" />
  {formatPostDate(date)}
</time>
