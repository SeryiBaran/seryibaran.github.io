---
interface Props {
  type?: 'simple' | 'info' | 'warning' | 'error' | 'success'
}

const { type = 'simple' } = Astro.props
---

<div class="alert border-2px border-solid p-4 text-sm" class:list={[type]}>
  <div class="alert_content">
    <slot />
  </div>
</div>

<style>
  .simple {
    @apply border-primary-600 bg-primary/8;
  }
  .info {
    @apply border-blue-600 bg-blue/8 text-blue-800 dark:text-blue-300;
  }
  .warning {
    @apply border-yellow-600 bg-yellow/8 text-yellow-800 dark:text-yellow-300;
  }
  .error {
    @apply border-red-600 bg-red/8 text-red-800 dark:text-red-300;
  }
  .success {
    @apply border-green-600 bg-green/8 text-green-800 dark:text-green-300;
  }
</style>
