<script is:inline>
  console.log('[ImageOpen.astro]:', 'hi')
  document.body.innerHTML += `<style>img:not(a img) { cursor: pointer; }</style>`
  console.log('[ImageOpen.astro]:', 'added styles')

  console.log('[ImageOpen.astro]:', 'document.querySelectorAll("img")', document.querySelectorAll("img"))

  document.querySelectorAll("img:not(a img)").forEach(img => {
    console.log('[ImageOpen.astro]:', 'loop', img)
    img.addEventListener("click", evt => {
      console.log('[ImageOpen.astro]:', 'clicked', img)
      window.open(evt.target.src, '_blank').focus();
    })
  })
</script>
