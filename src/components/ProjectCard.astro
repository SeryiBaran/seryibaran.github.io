---
import Link from '@/components/Link.astro'
import { Badge } from '@/components/ui/badge'
import { formatDate } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

export interface FakeProject {
  data: {
    name: string
    description: string
    tags: string[]
    image: CollectionEntry<'projects'>['data']['image']
    link: string
    startDate?: Date
    endDate?: Date
  }
}

interface Props {
  project: CollectionEntry<'projects'> | FakeProject
  projectIndex?: number
}

const { project } = Astro.props
---

<div
  class="hover:bg-secondary/50 rounded-xl border p-4 transition-colors duration-300 ease-in-out [&:nth-child(even)>*]:sm:flex-row-reverse project"
>
  <Link
    href={project.data.link}
    class="flex flex-col gap-4 sm:flex-row projectLink"
    external
  >
    {
      project.data.image && (
        <div class="bg-secondary/50 flex w-[1200px] max-w-3xs flex-col items-center justify-start rounded-lg p-3 sm:shrink-0 projectImageContainer">
          <Image
            src={project.data.image}
            alt={project.data.name}
            width={1200}
            height={630}
            // class="object-cover"
            // class="max-h-[70vh] object-cover object-top"
            class="shadow-secondary max-h-[60vh] w-auto rounded-md object-contain shadow-lg"
          />
        </div>
      )
    }
    <div class="grow">
      <h3 class="mb-1 text-lg font-medium">
        {project.data.name}
      </h3>
      <p class="text-muted-foreground mb-2 text-sm">
        {project.data.description}
      </p>
      {
        project.data.startDate && (
          <p class="text-muted-foreground/70 mb-2 flex items-center gap-x-1.5 text-xs">
            <span class="flex items-center gap-x-1.5">
              <Icon name="lucide:calendar" class="size-3" />
              <span>
                {formatDate(project.data.startDate)}
                {project.data.endDate
                  ? ` → ${formatDate(project.data.endDate)}`
                  : ' → Present'}
              </span>
            </span>
          </p>
        )
      }
      {
        project.data.tags && (
          <div class="flex flex-wrap gap-2 projectTags">
            {project.data.tags.map((tag: string) => (
              <Badge variant="secondary">{tag}</Badge>
            ))}
          </div>
        )
      }
    </div>
  </Link>
</div>

<style>
  .project:nth-child(even) {
    text-align: right;
  }
  .project:nth-child(even) .projectImageContainer {
    align-self: right;
  }
  .project:nth-child(even) .projectTags {
    justify-content: right;
  }
</style>
