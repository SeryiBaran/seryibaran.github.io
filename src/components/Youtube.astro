---
interface Props {
  id: string;
}

const props = Astro.props;
---

<div>
  <iframe
    class="youtube"
    src={`https://www.youtube-nocookie.com/embed/${props.id}`}
    frame-border="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen></iframe>
</div>

<style>
  .youtube {
    width: 100%;
    aspect-ratio: 16/9;
  }
</style>
