                {group.projects.map((project) => (
                  <>
                    <li class="mb-12">
                      <a class="cactus-link text-xl inline-block" href={project.link} target="_blank">
                        <span class="block mb-4">{project.title}</span>
                        {project.imgs && <><div class="flex flex-wrap items-center gap-2">
                          {project.imgs.map(img => <img src={img} class="max-h-60" />)}
