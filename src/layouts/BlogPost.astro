---
import type { CollectionEntry } from 'astro:content'
import BaseHead from '@/components/BaseHead.astro'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
import Main from '@/components/Main.astro'
import FormattedDate from '@/components/FormattedDate.astro'
import Divider from '@/components/Divider.astro'
import { SITE_DESCRIPTION } from '@/consts'

interface Props {
  isShowDate?: boolean
  data: {
    updatedDate?: Date | undefined
    heroImage?: string | undefined
    title: string
    description?: string
    date?: Date
  }
  slug?: CollectionEntry<'blog'>['slug']
}

const {
  isShowDate = true,
  data: { title, description, date, updatedDate, heroImage },
  slug = null,
} = Astro.props

let image

if (heroImage) {
  image = heroImage
} else if (slug) {
  image = `/image/${slug}.png`
} else {
  image = '/og.png'
}
---

<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description || SITE_DESCRIPTION}
      image={image}
    />
  </head>

  <body>
    <Header />
    <Main>
      <article>
        {heroImage && <img src={heroImage} alt="" />}
        <h1>{title}</h1>
        {isShowDate && date && <FormattedDate date={date} />}
        {
          isShowDate && updatedDate && (
            <div class="italic">
              Последний раз обновлено <FormattedDate date={updatedDate} />
            </div>
          )
        }
        <Divider article={false} />
        <slot />
      </article>
    </Main>
    <Footer />
  </body>
</html>
